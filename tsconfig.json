{
  "compilerOptions": {
    // ...
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["vite/client","node"],
    "paths": {
      "@/*": [
        "./src/*"
      ]
